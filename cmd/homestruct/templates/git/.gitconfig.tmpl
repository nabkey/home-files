# Git configuration - Generated by homestruct
# User: {{ .User }}

[user]
    # TODO: Configure your name and email
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = nvim
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FRX

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --oneline --graph --decorate --all
    amend = commit --amend --no-edit
    please = push --force-with-lease

[color]
    ui = auto

{{ if eq .OS "darwin" }}
[credential]
    helper = osxkeychain
{{ else }}
[credential]
    helper = cache --timeout=3600
{{ end }}

[rerere]
    enabled = true
