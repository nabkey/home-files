{
  "name": "zig-shell",
  "version": "1.0.0",
  "description": "Browser-based Zig shell with WASI kernel and virtual filesystem",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:wasm": "zig build",
    "clean": "rm -rf dist node_modules zig-out zig-cache",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bjorn3/browser_wasi_shim": "^0.3.0",
    "@aspect-build/browser_wasi_shim": "^0.1.0",
    "@aspect/wasi-js": "^0.1.0",
    "@aspect/web-terminal": "^0.1.0",
    "@aspect-build/wasi-js": "^0.1.0",
    "@xterm/xterm": "^5.3.0",
    "@xterm/addon-fit": "^0.8.0",
    "@xterm/addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "shell",
    "terminal",
    "zig",
    "wasi",
    "webassembly",
    "browser"
  ],
  "author": "",
  "license": "MIT"
}
